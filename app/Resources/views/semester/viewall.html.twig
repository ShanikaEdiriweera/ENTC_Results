{# app/Resources/semester/viewall.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
Semester Results
{% endblock %}

{% block body %}
<div class="results">

    {% for semester in semesters %}
    <h3>{{semester.name | e}}</h3>

    <ul>
    	{% for result in results %}
    		{% if result.semId == semester.id %}
	        <li>
	        	{{ result.studentIndex |e }} - {{ result.studentName |e }} - {{ result.gPA}} - {{ result.rank}}
	        </li>
	        {% endif %}
    	{% endfor %}
	</ul>
    {% endfor %}

	
	
</div> 
{% endblock %}